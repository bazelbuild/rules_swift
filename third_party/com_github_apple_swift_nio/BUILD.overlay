    ],
)

cc_library(
    name = "CNIOAtomics",
    srcs = glob([
        "Sources/CNIOAtomics/**/*.c",
        "Sources/CNIOAtomics/**/*.cc",
    ]),
    hdrs = glob([
        "Sources/CNIOAtomics/**/*.h",
    ]),
    copts = [],
    includes = ["Sources/CNIOAtomics/include"],
    tags = ["swift_module=CNIOAtomics"],
)

